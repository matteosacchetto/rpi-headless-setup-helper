{
  "name": "@matteosacchetto/rpi-headless-setup-helper",
  "version": "0.4.2",
  "description": "Raspberry Pi headless setup helper CLI",
  "main": "dist/index.mjs",
  "bin": {
    "rpi-headless-setup-helper": "dist/index.mjs"
  },
  "type": "module",
  "author": "Matteo Sacchetto",
  "license": "MIT",
  "scripts": {
    "lint": "tsc --pretty --incremental --noEmit && biome lint src test",
    "style-check": "biome format src/ test/",
    "style-fix": "biome format --write src/ test/",
    "dev": "rollup -c -w --environment NODE_ENV:development",
    "prebuild": "rm -rf dist",
    "build": "npm run lint && rollup -c --environment NODE_ENV:production",
    "build:dev": "rollup -c --environment NODE_ENV:development",
    "build:debug": "rollup -c --environment NODE_ENV:debug",
    "node": "node --loader=tsx/esm --no-warnings",
    "pretap": "npx tap build",
    "tap": "tap --node-arg='--no-warnings' --node-arg='--loader=tsx/esm' --disable-coverage --allow-empty-coverage",
    "pretest": "npm run lint && npx tap build",
    "test": "c8 -c .c8rc.json tap --node-arg='--no-warnings' --node-arg='--loader=tsx/esm' --disable-coverage --allow-empty-coverage test/*.test.ts test/**/*.test.ts",
    "prepack": "npm run build"
  },
  "devDependencies": {
    "@biomejs/biome": "1.4.1-nightly.570d680",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-replace": "^5.0.5",
    "@rollup/plugin-run": "^3.0.2",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/node": "^18.19.3",
    "@types/which": "^3.0.3",
    "c8": "^8.0.1",
    "esbuild": "^0.19.10",
    "rollup": "^4.9.1",
    "rollup-plugin-esbuild": "^6.1.0",
    "rollup-plugin-node-externals": "^6.1.2",
    "rollup-plugin-typescript-paths": "^1.5.0",
    "tap": "^18.6.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.18.0",
    "npm": ">=9.6.5"
  },
  "dependencies": {
    "@commander-js/extra-typings": "^11.1.0",
    "@inquirer/confirm": "^2.0.15",
    "@inquirer/input": "^1.2.14",
    "@inquirer/password": "^1.1.14",
    "chalk": "^5.3.0",
    "commander": "^11.0.0",
    "log-symbols": "^6.0.0",
    "ora": "^7.0.1",
    "strip-ansi": "^7.1.0",
    "which": "^4.0.0"
  },
  "tap": {
    "plugin": [
      "!@tapjs/typescript"
    ]
  }
}
